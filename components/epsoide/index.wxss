/* components/epsoide/index.wxss */
.container {
    height: 60rpx;
    display: inline-flex;
}

.index-container {
    display: inline-flex;
    align-items: baseline;
    height: 60rpx;
    line-height: 60rpx;
}

.index-container .plain {
    font-size: 32rpx;
}

.index-container .index {
    font-size: 60rpx;
    line-height: 60rpx;
    font-weight: 800;
    margin-right: 14rpx;
}

.index-container .line {
    height: 44rpx;
    margin-right: 14rpx;
    border-left: 1px solid black;
}

.date-container {
    display: flex;
    flex-direction: column;
    height: 60rpx;
    margin-top: 5rpx;
    /* justify-content: space-between; */
}

.date-container .month {
    font-size: 24rpx;
    line-height: 24rpx;
}

.date-container .year {
    font-size: 20rpx;
}