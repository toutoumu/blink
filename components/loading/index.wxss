.spinner {
    width: 40rpx;
    height: 40rpx;
    position: relative;
    background: red;
}

.double-bounce1 .double-bounce2 {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: #3063b2;
    opacity: 0.6;
    position: absolute;
    top: 0;
    left: 0;

    -webkit-animation: bounce 2.0s infinite ease-in-out;
    animation: bounce 2.0s infinite ease-in-out;
}

.double-bounce2 {
    animation-delay: -1s;
    -webkit-animation-delay: -1s;
}

@keyframes bounce {

    0%,
    100% {
        transform: scale(0.0)
    }

    50% {
        transform: scale(1.0)
    }
}

@-webkit-keyframes bounce {

    0%,
    100% {
        -webkit-transform: scale(0.0)
    }

    50% {
        -webkit-transform: scale(1.0)
    }
}